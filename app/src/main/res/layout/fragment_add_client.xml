<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddClient">

        <EditText
            android:id="@+id/name"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:hint="Введіть ім'я" />


        <EditText
            android:id="@+id/surname"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="41dp"
            android:layout_weight="1"
            android:hint="Введіть прізвище" />

        <EditText
            android:id="@+id/third_name"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/surname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:hint="Введіть ім'я по-батькові" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:layout_weight="1"
            android:hint="Введіть номер телефону"
            android:inputType="phone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/surname"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="195dp"
            android:layout_weight="1"
            android:hint="Введіть email" />

        <Button
            android:id="@+id/button"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:text="Зберегти"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="45dp" />

</RelativeLayout>