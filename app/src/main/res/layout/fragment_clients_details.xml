<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".clientdetails.ClientsDetails">
    <data>
        <variable
            name="ClientsDetailsViewModel"
            type="com.example.clients.clientdetails.ClientsDetailsViewModel" />
    </data>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contact_detail"
        android:rowCount="1"
        android:columnCount="1">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ClientsDetailsViewModel.clientName}"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/surname"
            android:text="@{ClientsDetailsViewModel.clientSurname}"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/third_name"
            android:text="@{ClientsDetailsViewModel.clientThrid_Name}"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="@{ClientsDetailsViewModel.clientPhone}"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="@{ClientsDetailsViewModel.email}"
            android:textSize="26sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:text="Назад" />

    </GridLayout>

</layout>